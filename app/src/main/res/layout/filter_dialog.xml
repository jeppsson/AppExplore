<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/target_sdk_version_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="2"
            android:text="@string/filter_sdk_version_min" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_range_target_sdk_version"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/target_sdk_version_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="2"
            android:text="@string/filter_sdk_version_max" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/flag_debuggable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flag_debuggable" />

    <CheckBox
        android:id="@+id/flag_uses_clear_text_traffic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flag_uses_cleartext_traffic" />

</LinearLayout>